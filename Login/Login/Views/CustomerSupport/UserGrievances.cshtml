@model IEnumerable<Login.Models.Grievance>

@{
    ViewData["Title"] = "Your Grievances";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Investment Portfolio Management</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        .grievances-page {
            background: #f8f9fa;
        }

        .grievances-table {
            border-radius: 15px;
            overflow: hidden;
        }

        .grievances-thead {
            background: #155454;
            color: white;
        }

        .grievances-submit-btn {
            background: #155454;
            border: none;
            border-radius: 5px;
            padding: 10px 20px; /* Adjust padding for small size */
            font-size: 1rem;
            color: white;
            width: auto; /* Adjust width */
        }

            .grievances-submit-btn:hover {
                background: #4b9393;
            }

        .grievances-alert {
            border-radius: 10px;
        }

        .table {
            border-radius: 15px;
        }

        h2 {
            color: #155454;
            margin-bottom: 30px;
        }

        .btn-primary, .btn-secondary {
            background-color: #155454;
            border-color: #155454;
            padding: 10px 20px;
            font-size: 1rem;
            color: white;
            width: auto; /* Ensure button takes appropriate width */
        }

        .btn-secondary {
            background-color: #f8f9fa;
            border-color: #155454;
            color: #155454;
        }

            .btn-primary:hover, .btn-secondary:hover {
                background-color: #4b9393;
                border-color: #4b9393;
                color: white;
            }

        .table thead th {
            background-color: #155454; /* Header color */
            color: white;
        }
    </style>
</head>
<body class="bg-light grievances-page">
    <div class="container mt-5">
        <h2 class="text-center mb-4">@ViewData["Title"]</h2>
        @if (Model.Any())
        {
            <div class="table-responsive grievances-table">
                <table class="table table-striped table-bordered">
                    <thead class="grievances-thead">
                        <tr>
                            <th>Subject</th>
                            <th>Description</th>
                            <th>Created At</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var grievance in Model)
                        {
                            <tr>
                                <td>@grievance.Subject</td>
                                <td>@grievance.Description</td>
                                <td>@grievance.CreatedAt.ToString("g")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center grievances-alert">
                No grievances submitted yet.
            </div>
        }
        <div class="text-center mt-4">
            <a asp-action="SubmitGrievance" class="btn btn-primary grievances-submit-btn">Submit a new Grievance</a>
        </div>
    </div>
</body>
</html>
