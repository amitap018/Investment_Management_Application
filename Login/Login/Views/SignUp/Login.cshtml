
@model Login.Models.AuthenticationLogin

@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Investment Portfolio Management</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            height: 100%;
            margin: 0;
            font-family: Arial, sans-serif;
            overflow: hidden; /* Prevent scrolling */
        }

        .login-container {
            position: relative;
            display: flex;
            height: 100vh;
            width: 100vw;
            align-items: center;
            justify-content: flex-start; /* Align items to the start (left) */
        }

        .login-image-section {
            flex: 0 0 40%; /* Keep the image section size the same */
            background-image: url('@Url.Content("~/Images/login.png")'); /* Ensure the path is correct */
            background-size: contain; /* Adjust the size of the image */
            background-repeat: no-repeat;
            background-position: center;
            height: 100%;
        }

        .login-form-section {
            flex: 0 0 60%; /* Adjust the percentage to make the form section larger */
            display: flex;
            justify-content: flex-start; /* Align items to the left */
            align-items: center;
            padding: 20px;
            margin-left: 10%; /* Reduce the gap between image and form */
            border-radius: 10px;
        }

        .login-card {
            width: 100%;
            max-width: 400px;
            border: none;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: white;
        }

        .login-title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
            color: #155454; /* Primary color */
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-control {
            height: calc(1.5em + .75rem + 2px);
            padding: .375rem .75rem;
            font-size: 1rem;
            line-height: 1.5;
            color: #495057;
            background-color: #fff;
            background-clip: padding-box;
            border: 1px solid #ced4da;
            border-radius: .25rem;
            transition: border-color .15s ease-in-out, box-shadow .15s ease-in-out;
        }

        .btn-block {
            display: block;
            width: 100%;
            padding: .75rem;
            font-size: 1rem;
            font-weight: 400;
            line-height: 1.5;
            color: #fff;
            background-color: #155454; /* Primary color */
            border: 1px solid #155454; /* Primary color */
            border-radius: .25rem;
            transition: color .15s ease-in-out, background-color .15s ease-in-out, border-color .15s ease-in-out, box-shadow .15s ease-in-out;
        }

            .btn-block:hover {
                color: #fff;
                background-color: #4b9393; /* Secondary color */
                border-color: #4b9393; /* Secondary color */
            }

        .text-center a {
            color: #155454; /* Primary color */
            text-decoration: none;
        }

            .text-center a:hover {
                color: #4b9393; /* Secondary color */
                text-decoration: underline;
            }

        .avatar {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            display: block;
            margin: 0 auto 20px auto;
        }

        .login-title-container {
            position: absolute;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="login-title-container">
        <h1>Portfolio Managament Application</h1>
    </div>
    <div class="login-container">
        <div class="login-image-section"></div>
        <div class="login-form-section">
            <div class="card login-card">
                <img src="~/Images/avatar.svg" alt="Avatar" class="avatar">
                <h1 class="card-title text-center login-title">@ViewData["Title"]</h1>
                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Login</button>
                </form>
                <div class="text-center mt-3">
                    <a asp-controller="SignUp" asp-action="ForgotPassword">Forgot your password?</a>
                </div>
                <div class="text-center mt-3">
                    Don't have an account? <a asp-controller="SignUp" asp-action="SignUp">Sign up here</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
