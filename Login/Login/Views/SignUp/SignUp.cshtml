
@model Login.Models.Authentication

@{
    ViewData["Title"] = "Sign Up";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Investment Portfolio Management</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        .signup-container {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .signup-card {
            width: 100%;
            max-width: 900px;
            display: flex;
            flex-direction: row;
            align-items: center;
        }

        .signup-title {
            color: #155454; /* Primary color */
            border-bottom: none; /* Remove the bottom border */
        }

        .btn-primary {
            background-color: #155454;
            border-color: #155454;
            padding: 10px 20px; /* Adjust padding for middle size */
            font-size: 1rem; /* Adjust font size for middle size */
        }

            .btn-primary:hover {
                background-color: #4b9393;
                border-color: #4b9393;
            }

        .text-center a {
            color: #155454;
        }

            .text-center a:hover {
                color: #4b9393;
            }

        .signup-img {
            height: 100%;
            width: 100%;
            object-fit: cover;
        }

        .card-header {
            background: transparent;
            text-align: center;
            border-bottom: none; /* Remove the bottom border */
        }

        .form-section {
            padding-top: 20px;
            padding-right: 20px;
            padding-bottom: 20px;
            padding-left: 70px; /* Space between image and form */
            flex: 1;
        }

        .img-section {
            flex: 1;
        }
    </style>
</head>
<body class="bg-light">
    <div class="container signup-container">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="card shadow-lg p-4 mb-5 bg-white signup-card">
                    <div class="img-section">
                        <img src="~/Images/signup.png" class="card-img signup-img" alt="Signup Image">
                    </div>
                    <div class="form-section">
                        <h4 class="card-header signup-title">Create Account</h4>
                        <div class="card-body">
                            <form asp-action="SignUp" method="post">
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label"></label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email" class="control-label"></label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password" class="control-label"></label>
                                    <input asp-for="Password" class="form-control" type="password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <button type="submit" class="btn btn-primary btn-block">Sign Up</button>
                            </form>
                            <div class="text-center mt-3">
                                Already have an account? <a asp-controller="SignUp" asp-action="Login">Login here</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>









