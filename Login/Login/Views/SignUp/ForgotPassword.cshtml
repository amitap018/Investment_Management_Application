 @model Login.Models.ForgotPasswordModel

@{
    ViewData["Title"] = "Forgot Password";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Investment Portfolio Management</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
</head>
<body class="bg-light forgot-password-page">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg p-3 mb-5 bg-white rounded forgot-password-card">
                    <div class="card-header forgot-password-card-header text-white text-center">
                        <h4>Forgot Password</h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="ForgotPassword" method="post" class="needs-validation" novalidate>
                            <div class="form-group">
                                <label asp-for="Email" class="control-label">Email:</label>
                                <input asp-for="Email" class="form-control" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-lg forgot-password-submit-btn">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

</body>
</html>

<style>
    .forgot-password-page {
        background: #f8f9fa;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .forgot-password-card {
        margin-top: 20px;
    }

    .forgot-password-card-header {
        background: linear-gradient(135deg, #155454, #4b9393);
    }

    .forgot-password-submit-btn {
        background: #155454;
        border: none;
    }

        .forgot-password-submit-btn:hover {
            background: #4b9393;
        }
</style>
