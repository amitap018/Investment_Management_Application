@model Login.Models.UserDetails
@{
    Layout = "_Layout";
    ViewData["Title"] = "User Profile";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<h2 class="text-center my-4">Profile</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="d-flex justify-content-center mb-4">
                <img src="~/Images/avatar.svg" alt="Profile Icon" class="profile-icon" />
            </div>
            <div class="card shadow-lg p-3 mb-5 bg-white rounded profile-card">
                <div class="card-header profile-card-header text-white">
                    <h4 class="card-title mb-0">Hello @Model.Name</h4>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4 font-weight-bold">Name:</div>
                        <div class="col-md-8">@Model.Name</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 font-weight-bold">Email:</div>
                        <div class="col-md-8">@Model.Email</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 font-weight-bold">Address:</div>
                        <div class="col-md-8">@Model.Address</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 font-weight-bold">Account Number:</div>
                        <div class="col-md-8">@Model.AccountNumber</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 font-weight-bold">Phone Number:</div>
                        <div class="col-md-8">@Model.PhoneNumber</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 font-weight-bold">PAN:</div>
                        <div class="col-md-8">@Model.Pan</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 font-weight-bold">Aadhaar Number:</div>
                        <div class="col-md-8">@Model.AadhaarNumber</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 font-weight-bold">IFSC Code:</div>
                        <div class="col-md-8">@Model.IfscCode</div>
                    </div>

                    <form id="deleteAccountForm" method="post" asp-action="DeleteAccount" asp-controller="SignUp">
                        @Html.AntiForgeryToken()
                        <button type="button" id="closeAccountButton" class="btn btn-danger profile-close-btn">Close Account</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.getElementById("closeAccountButton").addEventListener("click", function () {
            if (confirm("Are you sure you want to close your account? This action cannot be undone.")) {
                document.getElementById("deleteAccountForm").submit();
            }
        });
    </script>
}

<style>
    .profile-card {
        border-radius: 15px;
    }

    .profile-card-header {
        background: #155454;
        border-radius: 15px 15px 0 0;
    }

    .profile-close-btn {
        background: #d9534f;
        border: none;
        border-radius: 10px;
    }

        .profile-close-btn:hover {
            background: #c9302c;
        }

    .profile-icon {
        width: 100px;
        height: 100px;
        border-radius: 50%;
    }
</style>
