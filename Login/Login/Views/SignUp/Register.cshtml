@model Login.Models.UserDetails

@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Investment Portfolio Management</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <style>
        .register-page {
            background-color: #f8f9fa;
            padding: 10px;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .register-container {
            max-width: 800px;
            width: 100%;
            margin: 0 auto;
        }

        .register-card {
            margin-bottom: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .register-card-header {
            background-color: #155454;
            color: white;
            padding: 10px 15px;
            border-bottom: 1px solid #ddd;
            border-radius: 5px 5px 0 0;
        }

        .register-card-body {
            padding: 10px 15px;
        }

        .register-title {
            color: #155454;
            font-size: 24px;
            margin-bottom: 15px;
            text-align: center;
        }

        .register-form-group {
            margin-bottom: 10px;
        }

        .register-form-label {
            font-weight: bold;
        }

        .btn-primary {
            background-color: #155454;
            border-color: #155454;
        }

            .btn-primary:hover {
                background-color: #4b9393;
                border-color: #4b9393;
            }
    </style>
</head>

<body class="register-page">
    <div class="register-container">
        <h1 class="register-title">Register</h1>
        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Personal Information Section -->
            <div class="card register-card">
                <div class="card-header register-card-header">
                    <h4 class="mb-0">Personal Information</h4>
                </div>
                <div class="card-body register-card-body">
                    <div class="row">
                        <div class="col-md-6 register-form-group">
                            <label asp-for="Name" class="register-form-label control-label"></label>
                            <input asp-for="Name" class="form-control" readonly />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 register-form-group">
                            <label asp-for="Email" class="register-form-label control-label"></label>
                            <input asp-for="Email" class="form-control" readonly />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 register-form-group">
                            <label asp-for="Address" class="register-form-label control-label"></label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 register-form-group">
                            <label asp-for="PhoneNumber" class="register-form-label control-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Bank Details Section -->
            <div class="card register-card">
                <div class="card-header register-card-header">
                    <h4 class="mb-0">Bank Details</h4>
                </div>
                <div class="card-body register-card-body">
                    <div class="row">
                        <div class="col-md-6 register-form-group">
                            <label asp-for="AccountNumber" class="register-form-label control-label"></label>
                            <input asp-for="AccountNumber" class="form-control" />
                            <span asp-validation-for="AccountNumber" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 register-form-group">
                            <label asp-for="IfscCode" class="register-form-label control-label"></label>
                            <input asp-for="IfscCode" class="form-control" />
                            <span asp-validation-for="IfscCode" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 register-form-group">
                            <label asp-for="BankName" class="register-form-label control-label"></label>
                            <input asp-for="BankName" class="form-control" />
                            <span asp-validation-for="BankName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Other Information Section -->
            <div class="card register-card">
                <div class="card-header register-card-header">
                    <h4 class="mb-0">Other Information</h4>
                </div>
                <div class="card-body register-card-body">
                    <div class="row">
                        <div class="col-md-6 register-form-group">
                            <label asp-for="Pan" class="register-form-label control-label"></label>
                            <input asp-for="Pan" class="form-control" />
                            <span asp-validation-for="Pan" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 register-form-group">
                            <label asp-for="AadhaarNumber" class="register-form-label control-label"></label>
                            <input asp-for="AadhaarNumber" class="form-control" />
                            <span asp-validation-for="AadhaarNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary btn-block">Register</button>
        </form>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>

</html>
